<Window x:Class="Lorenz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Loaded="OnLoaded"
        Closed="OnClosed">
   <DockPanel>

      <DockPanel DockPanel.Dock="Top">
         <TextBox Name="XTextbox" HorizontalAlignment="Stretch"/>
      </DockPanel>
      <Canvas  Name="XCanvas" Background="GreenYellow">
         <Viewport3D Name="XViewport" Width="{Binding ElementName=XCanvas, Path=ActualWidth}" Height="{Binding ElementName=XCanvas, Path=ActualHeight}"/>
      </Canvas>
   </DockPanel>
</Window>
